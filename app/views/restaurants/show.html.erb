<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
  <%= link_to restaurants_path do %>
    <i class="fas fa-undo-alt"></i> Back to list
  <% end %>
  <%= link_to new_restaurant_review_path(@restaurant) do%>
    <i class="fas fa-quote-right"></i> Leave a Review
  <% end %>
</nav>

<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p>Adress: <%= @restaurant.address %></p>
  <p>Phone number: <%= @restaurant.phone_number %></p>
  <p>Food style: <%= @restaurant.category %></p>

  <div class="reviews">
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li>
          <% review.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - review.rating).times do %>
            <i class="far fa-star"></i>
          <% end %>
          | <%= review.content %>
        </li>
      <% end %>
    </ul>
  </div>
</div>